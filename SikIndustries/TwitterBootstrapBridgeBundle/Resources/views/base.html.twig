<!DOCTYPE html>
<html>
<head>
    <title>{%block title %}{% endblock %}</title>

    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="stylesheet" media="screen" href="/bundles/sikindustriestwitterbootstrapbridge/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" media="screen" href="/bundles/sikindustriestwitterbootstrapbridge/bootstrap/css/bootstrap-responsive.min.css" />
    {% block stylesheets %}{% endblock %}

    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
    <script src="/bundles/sikindustriestwitterbootstrapbridge/bootstrap/js/bootstrap.min.js"></script>
    {% block head_javascripts %}{% endblock %}
</head>
<body>
    {%block content_wrapper %}
        {% block navigation_wrapper %}
        <div class="navbar navbar-inverse navbar-fixed-top">
            <div class="navbar-inner">
                <div class="container">
                    {% block navigation %}
                    <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </a>
                    <a class="brand" href="#">Project name</a>
                    <div class="nav-collapse collapse">
                        <ul class="nav">
                            <li class="active"><a href="#">Home</a></li>
                            <li><a href="#about">About</a></li>
                            <li><a href="#contact">Contact</a></li>
                        </ul>
                    </div>
                    {% endblock %}
                </div>
            </div>
        </div>
        {%endblock%}

        <div id="container-wrapper" class="container">
            {% for messageType in ["success", "info", "error"] %}
                {% for flashMessage in app.session.flashbag.get(messageType) %}
                    <div class="alert alert-{{ messageType }}">{{ flashMessage }}</div>
                {% endfor %}
            {% endfor %}

            {% block content %}
            <h1>Bootstrap starter template</h1>
            <p>Use this document as a way to quick start any new project.<br> All you get is this message and a barebones HTML document.</p>
            {% endblock %}

            {%block footer %}
            <hr>

            <footer>
                <p>&copy; SikIndustries {{ 'now' | date('Y') }}</p>
            </footer>
            {% endblock %}
        </div>
    {% endblock %}

    {% javascripts '@SikIndustriesTwitterBootstrapBridgeBundle/Resources/public/bootstrap/js/bootstrap.min.js' output='compiled/js/main.js' %}
        <script type="text/javascript" src="{{ asset_url }}"></script>
    {% endjavascripts %}
    {% block bottom_javascripts %}{% endblock %}
</body>
</html>